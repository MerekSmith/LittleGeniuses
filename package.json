{
  "name": "littlegeniuses",
  "version": "1.0.0",
  "description": "Website for Little Geniuses Daycare of Midvale",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node server.js",
