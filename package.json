    "concurrently": "^4.1.0",
    "express": "^4.16.4",
    "gravatar": "^1.8.0",
    "gridfs-stream": "^1.1.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.4.20",
    "multer": "^1.4.2",
    "multer-gridfs-storage": "^3.3.0",
    "node-sass": "^4.12.0",
    "nodemailer": "^6.3.0",
    "passport": "^0.4.0",
